@model EmployeeCRUD.Models.Employee

@{
    Layout = "_Layout";
    var title = ViewBag.Title;
    ViewData["Title"] = title;
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<h2>@title</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>



@using (Html.BeginForm(new { @class = "m-1 p-1" }))
{
    @Html.AntiForgeryToken()
    @if (Model != null && Model.EmployeeId > 0)
    {
        @Html.LabelFor(model => model.EmployeeId, "Employee Id")
        @Html.TextBoxFor(model => model.EmployeeId, new { @class = "form-control", @readonly = "readonly" })

    }
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "First Name")
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Last Name")
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmailId, "Email")
        @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Education, "Level Of Education")
        @Html.TextBoxFor(model => model.Education, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.YearsOfExperience, " Number Of Years Of Experience")
        @Html.TextBoxFor(model => model.YearsOfExperience, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.YearsOfExperience, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Salary)
        @Html.TextBoxFor(model => model.Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Salary, "", new { style = "class:text-danger" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

}


<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>  